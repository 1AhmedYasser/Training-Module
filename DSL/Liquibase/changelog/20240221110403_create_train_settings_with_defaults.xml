<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20240221110403" author="DV">
        <createTable tableName="train-settings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="folds" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="scheduled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="daysofweek" type="varchar(15)">
                <constraints nullable="true"/>
            </column>
            <column name="fromdate" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <insert tableName="train-settings">
            <column name="folds" valueNumeric="8"/>
            <column name="scheduled" valueBoolean="true"/>
            <column name="fromdate" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="daysofweek" value="1,2,3"/>
        </insert>
    </changeSet>
</databaseChangeLog>
